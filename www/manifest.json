{
  "manifest_version": 2,

  "name": "Kamusi Extension",
  "description": "Translate words on the spot!!",
  "version": "1.0",

  "browser_action": {
    "default_icon": "favicon.png",
    "default_popup": "kamusi_ext-v1.html",
    "default_title": "Translate!"
  },
  "background": {
    "scripts": ["context_menu.js","jquery.min.js"]
  },


  "permissions": [
    "contextMenus", 
    "tabs",
    "https://ajax.googleapis.com/",
    "storage"
  ],

  "icons": {
          "16": "favicon16.png"
        }
}